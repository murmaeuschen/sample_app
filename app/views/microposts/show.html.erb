<p>
  <strong>Post:</strong>
  <%= @micropost.content %>
</p>

<h2>Comments</h2>
<%= render @micropost.comments %>
 
<h4>Add a comment:</h4>
<%= form_for([@micropost, @micropost.comments.build]) do |f| %>
  <p>
    <%= f.label "Your comment" %><br />
    <%= f.text_area :body, rows: 3 %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
 

